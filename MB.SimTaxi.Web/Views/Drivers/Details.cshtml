@using MB.SimTaxi.Web.Models.Drivers;
@model DriverDetailsViewModel

@{
    ViewData["Title"] = $"Details {Model.Name}";
}

<div class="container">
    <h1>
        Details
        <span class="text-primary">@Model.Name</span>
    </h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </dt>
            <dd class="col-sm-10">
                @Model.DateOfBirth.ToString("dd, MMMM, yyyy")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SSN)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SSN)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CountryName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CountryName)
            </dd>
        </dl>

        <hr />

        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Plate Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model.Cars)
                {
                    <tr>
                        <td>@car.Brand</td>
                        <td>@car.Model</td>
                        <td>@car.PlateNumber</td>
                        <th>

                            <!-- Button trigger delete modal -->
                            <span class="pointer ms-2 text-danger" data-bs-toggle="tooltip" data-bs-title="Delete">

                                <i class="fa-solid fa-trash" data-bs-toggle="modal" data-bs-target="#deleteModal_@car.Id"></i>

                            </span>

                            <!-- Delete Modal -->
                            <div class="modal fade" id="deleteModal_@car.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">

                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="deleteModalLabel">Remove Driver Car</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <h3>Are you sure you want to remove <span class="text-danger">@car.Brand - @car.Model - @car.PlateNumber</span>?</h3>
                                        </div>

                                        <div class="modal-footer">
                                            <form asp-action="RemoveCar" class="mt-3">
                                                <input type="hidden" name="driverId" value="@Model.Id" />
                                                <input type="hidden" name="carId" value="@car.Id" />
                                                <a class="btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
                                                <input type="submit" value="Delete" class="btn btn-danger ms-1" />
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>


                        </th>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    <div>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
        <a class="btn btn-primary ms-2" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    </div>
</div>