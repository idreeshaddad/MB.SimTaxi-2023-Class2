@using MB.SimTaxi.Web.Enums;
@using MB.SimTaxi.Web.Models.Cars;
@model CreateUpdateCarViewModel

@{
    ViewData["Title"] = "Create Car";
}

<div class="container">

    <h1>Create Car</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Brand" class="control-label"></label>
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="PlateNumber" class="control-label"></label>
                    <input asp-for="PlateNumber" class="form-control" />
                    <span asp-validation-for="PlateNumber" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="CarType" class="control-label"></label>
                    <select asp-for="CarType" asp-items="@Html.GetEnumSelectList<CarType>()" class="form-control"></select>
                    <span asp-validation-for="CarType" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="FuelTypeId" class="control-label"></label>
                    <select asp-for="FuelTypeId" asp-items="@ViewBag.FuelTypes" class="form-control"></select>
                    <span asp-validation-for="FuelTypeId" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="DriverId" class="control-label"></label>
                    <select asp-for="DriverId" class="form-control" asp-items="ViewBag.DriverId"></select>
                </div>
                <div class="form-group mt-3">
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
