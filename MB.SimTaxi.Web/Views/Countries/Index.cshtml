@model IEnumerable<MB.SimTaxi.Web.Data.Entities.Country>

@{
    ViewData["Title"] = "Countries";
}

<h1>Countries</h1>

<hr />
    <a class="btn btn-primary" asp-action="Create">Create New Country</a>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    <a class="text-decoration-none text-primary" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                        <i class="fa-solid fa-pen"></i>
                    </a> 
                    <a class="text-decoration-none ms-2 text-info" asp-action="Details" asp-route-id="@item.Id" title="Details">
                        <i class="fa-solid fa-circle-info"></i>
                    </a>
                    <a class="text-decoration-none ms-2 text-danger" asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
