@using MB.SimTaxi.Web.Models.Countries;
@model IEnumerable<CountryViewModel>

@{
    ViewData["Title"] = "Countries";
}

<div class="container">
    <h1>Countries</h1>

    <hr />
    <a class="btn btn-primary" asp-action="Create">Create New Country</a>
    <hr />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => country.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => country.Code)
                </td>
                <td>
                    <a class="text-decoration-none text-primary" asp-action="Edit" asp-route-id="@country.Id" data-bs-toggle="tooltip" data-bs-title="Edit">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                    <a class="text-decoration-none ms-2 text-info" asp-action="Details" asp-route-id="@country.Id" data-bs-toggle="tooltip" data-bs-title="Details">
                        <i class="fa-solid fa-circle-info"></i>
                    </a>
                    <a class="text-decoration-none ms-2 text-danger" asp-action="Delete" asp-route-id="@country.Id" data-bs-toggle="tooltip" data-bs-title="Delete">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
