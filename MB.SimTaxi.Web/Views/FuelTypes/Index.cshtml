@using MB.SimTaxi.Web.Models.FuelTypes;
@model IEnumerable<FuelTypeViewModel>

@{
    ViewData["Title"] = "Fuel Types";
}

<div class="container">
    <h1>Fuel Types</h1>
    
    <hr />
    <a class="btn btn-primary" asp-action="Create">Create New Fuel Type</a>
    <hr />
    
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fuelType in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => fuelType.Name)
                    </td>
                    <td>
                        <a class="text-decoration-none text-primary" asp-action="Edit" asp-route-id="@fuelType.Id" data-bs-toggle="tooltip" data-bs-title="Edit">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a class="text-decoration-none ms-2 text-info" asp-action="Details" asp-route-id="@fuelType.Id" data-bs-toggle="tooltip" data-bs-title="Details">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>
                        <a class="text-decoration-none ms-2 text-danger" asp-action="Delete" asp-route-id="@fuelType.Id" data-bs-toggle="tooltip" data-bs-title="Delete">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>